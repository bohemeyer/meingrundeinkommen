<div class="container margin-top-70">

  <div class="row">
    <div class="text-center">
      <h1 style="margin-bottom:0px" ng-hide="confirmation_error">Schnell einloggen!</h1>
      <h4 ng-hide="just_confirmed">Oder: <a href="/users/sign_up">Neu hier</a>?</h4>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8 col-md-offset-2 col-xs-12 col-lg-6 col-lg-offset-3 col">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal margin-top-30"}) do |f| %>
        <div class="form-group">
          <%= f.label :email, :class => "control-label col-sm-2" %>
          <div class="col-sm-10 text-left">
            <%= f.email_field :email, autofocus: true, :class => "form-control input-large" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password, "passwort", :class => "control-label col-sm-2"  %>
          <div class="col-sm-10 text-left">
            <%= f.password_field :password, autocomplete: "off", :class => "form-control input-large" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit "Los Jetzt!", :class => "btn btn-special btn-color" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

</div>
