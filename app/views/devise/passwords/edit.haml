.container.margin-top-70
  .row
    .text-center
      %h2{:style => "margin-bottom:0px"} Passwort ändern
  .row
    .col-md-8.col-md-offset-2.col-xs-12.col-lg-8.col-lg-offset-1.col
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "form-horizontal margin-top-30", method: :put }) do |f|
        = devise_error_messages!
        = f.hidden_field :reset_password_token
        
        .form-group
          = f.label :password, "Neues passwort", :class => "control-label col-sm-4"
          .col-sm-8.text-left
            = f.password_field :password, autofocus: true, :class => "form-control input-large"
        .form-group
          = f.label :password_confirmation, "Passwortbestätigung", :class => "control-label col-sm-4"
          .col-sm-8.text-left
            = f.password_field :password_confirmation, autofocus: true, :class => "form-control input-large"

        .form-group
          .col-sm-offset-4.col-sm-2
            = f.submit "Passwort zurücksetzen", :class => "btn btn-special btn-color"