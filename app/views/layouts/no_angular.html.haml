                  %a{href: "/blog"}
                    Blog
                %li{id: "{{getStatus('/faq')}}"}
                  %a{href: "/faq"}
                    Fragen
                %li{id: "{{getStatus('/support')}}"}
                  %a{href: "/support", style: "padding-bottom: 25px;"}
                    Unterstützen!

                %li{"ng-hide" => "current.isAuthenticated()", :id => "{{getStatus('/register')}}"}
